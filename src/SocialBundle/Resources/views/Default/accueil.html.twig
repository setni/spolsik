{% extends "SocialBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block content %}

{% for actu in actus %}
    <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                <!-- Blog Post -->

                <!-- Title -->
                <h1>Blog Post Title</h1>

                <!-- Author -->
                <p class="lead">
                    by <a href="#">Start Bootstrap</a>
                </p>

                <hr>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span> Posté le {{ actu.date.format('Y-m-d à H:i') }} </p>

                <hr>

                <!-- youtube link -->
                <div class="linkYoutube" linkinfo="{{ actu.youtube }}">
                    
                </div>

                <hr>

                <!-- Post Content -->
                <p class="lead">{{ actu.titre }} de {{ actu.artiste }}</p>
                <p>{{ actu.description }}</p>

                <hr>

                <!-- Blog Comments -->

                <!-- Comments Form -->
                <div class="well">
                    <h4>Posté un commentaire:</h4>
                    <form role="form" action="javascript:commentForm({{ actu.id }})" method="POST">
                        <div class="form-group">
                            <textarea data-actu="{{ actu.id }}" class="form-control" rows="3"></textarea>
                            <input type="hidden" id="_token" name="token" value="{{ token }}">
                        </div>
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </form>
                </div>

                <hr>

                <!-- Posted Comments -->

                <!-- Comment -->
                <div class="media">
                    <a class="pull-left" href="#">
                        <img class="media-object" src="http://placehold.it/64x64" alt="">
                    </a>
                    <div class="media-body">
                        <h4 class="media-heading">Start Bootstrap
                            <small>August 25, 2014 at 9:30 PM</small>
                        </h4>
